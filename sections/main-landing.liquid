  <script>
  const GT_COMPANY = {
    salesEmail: 'bookings@gleamteamdetailing.com',
    phone: '+1-305-555-0111',
    brand: 'Gleam Team Mobile Detailing',
    address: 'Miami, FL',
    serviceArea: 'Miami & South Florida'
  };

  const GT_DATA = {
    tiers: {
      tier1: {
        key: 'tier1', name: 'Gleam & Go', subtitle: 'Basic upkeep',
        base: { exterior: 60, interior: 60, full: 80, motorcycle: 60 },
        surcharge: { suv: 15, oversized: 30 },
        includes: {
          exterior: [ 'Pressure wash & foam cannon pre-soak', 'Hand wash with pH-balanced soap', 'Wheel & tire cleaning', 'Streak-free rinse & dry', 'Glass cleaning', 'Tire shine' ],
          interior: [ 'Vacuum', 'Dusting & wipe-down', 'Door jambs', 'Floor mats & carpets' ]
        }
      },
      tier2: {
        key: 'tier2', name: 'Gleam+', subtitle: 'Enhanced clean',
        base: { exterior: 90, interior: 90, full: 120, motorcycle: 90 },
        surcharge: { suv: 20, oversized: 40 },
        includes: {
          exterior: [ 'Everything in Gleam & Go', 'Spray wax', 'Bug/tar removal', 'Trim dressing' ],
          interior: [ 'Everything in Gleam & Go', 'Air freshening' ]
        }
      },
      tier3: {
        key: 'tier3', name: 'Ultimate Gleam', subtitle: 'Premium gloss & protection',
        base: { exterior: 150, interior: 150, full: 200, motorcycle: 120 },
        surcharge: { suv: 25, oversized: 50 },
        includes: {
          exterior: [ 'Everything in Gleam+', 'Clay bar/pad decontamination', 'Polish or paint enhancer', 'Premium wax or sealant (two-stage)' ],
          interior: [ 'Everything in Gleam+' ]
        }
      }
    },
    addons: [
      { id: 'pethair', label: 'Pet Hair Removal — Normal', price: 20 },
      { id: 'pethairexcess', label: 'Pet Hair Removal — Excessive', price: 40, exclusiveWith: ['pethair'] },
      { id: 'engine', label: 'Engine Bay Detailing', price: 20 },
      { id: 'bugtar', label: 'Bug/Tar Removal (if not included)', price: null },
      { id: 'leather', label: 'Leather Cleaning & Conditioning', price: null },
      { id: 'ceramicInt', label: 'Ceramic Coating — Interior', price: 500, disabled: true },
      { id: 'ceramicExt', label: 'Ceramic Coating — Exterior', price: null, disabled: true },
      { id: 'ceramicGlass', label: 'Ceramic Coating — Windows Only', price: null, disabled: true },
      { id: 'ceramicRims', label: 'Ceramic Coating — Rims Only', price: null, disabled: true },
      { id: 'odor', label: 'Odor & Smoke Termination', price: null, disabled: true }
    ]
  };

  const gtState = { openTier: null, service: 'full', vehicle: null, utilities: null, addons: new Set(), quotes: new Set(), total: 0 };

  const $ = (q, el = document) => el.querySelector(q);
  const $$ = (q, el = document) => Array.from(el.querySelectorAll(q));
  const gtMoney = n => (n === null || Number.isNaN(n)) ? '—' : `$${n.toFixed(0)}`;
  const gtNav = $('.gt-nav');
  const gtNavLinks = $('#gt-nav-links');
  const gtNavToggle = $('#gt-nav-toggle');
  let gtTouchMoved = false;

  if (gtNav) {
    gtNav.style.setProperty('--nav-collapse', '0');
  }

  document.addEventListener('touchstart', () => { gtTouchMoved = false; }, { passive: true });
  document.addEventListener('touchmove', () => { gtTouchMoved = true; }, { passive: true });
  document.addEventListener('touchcancel', () => { gtTouchMoved = false; }, { passive: true });
  if (window.PointerEvent) {
    let gtTouchPointerActive = false;
    document.addEventListener('pointerdown', evt => {
      if (evt.pointerType === 'touch') {
        gtTouchPointerActive = true;
        gtTouchMoved = false;
      }
    }, { passive: true });
    document.addEventListener('pointermove', evt => {
      if (gtTouchPointerActive && evt.pointerType === 'touch') {
        gtTouchMoved = true;
      }
    }, { passive: true });
    const gtResetPointerTouch = () => {
      gtTouchPointerActive = false;
    };
    document.addEventListener('pointerup', evt => {
      if (evt.pointerType === 'touch') {
        gtResetPointerTouch();
      }
    }, { passive: true });
    document.addEventListener('pointercancel', evt => {
      if (evt.pointerType === 'touch') {
        gtResetPointerTouch();
        gtTouchMoved = false;
      }
    }, { passive: true });
  }

  function gtCloseNavMenu() {
    if (!gtNavLinks || !gtNavToggle) return;
    gtNavLinks.classList.remove('show');
    gtNavToggle.setAttribute('aria-expanded', 'false');
    gtUpdateNavCondensed();
  }

  let gtNavWasCondensed = false;
  function gtUpdateNavCondensed() {
    if (!gtNav) return;
    const isMobile = window.innerWidth <= 760;
    const menuOpen = gtNavLinks && gtNavLinks.classList.contains('show');
    let progress = 0;
    if (isMobile && !menuOpen) {
      const scrollY = window.scrollY || document.documentElement.scrollTop || 0;
      const condenseThreshold = 120;
      progress = Math.min(Math.max(scrollY / condenseThreshold, 0), 1);
    }
    gtNav.style.setProperty('--nav-collapse', progress.toFixed(3));
    const shouldCondense = isMobile && !menuOpen && progress > 0.6;
    if (shouldCondense !== gtNavWasCondensed) {
      gtNav.classList.toggle('is-condensed', shouldCondense);
      gtNavWasCondensed = shouldCondense;
    }
  }

  function gtSmoothAnchors(evt) {
    const link = evt.target.closest('a[href^="#"]');
    if (!link || link.getAttribute('href') === '#') return;
    if (gtTouchMoved) {
      gtTouchMoved = false;
      return;
    }
    const id = link.getAttribute('href');
    if (id.length <= 1) return;
    const target = document.querySelector(id);
    if (!target) return;
    evt.preventDefault();
    gtCloseNavMenu();
    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
  }

  function gtHandleGallery(evt) {
    const zoomTrigger = evt.target.closest('[data-zoom]');
    const lb = $('#gt-lightbox');
    if (zoomTrigger && lb) {
      lb.querySelector('img').src = zoomTrigger.getAttribute('src');
      lb.classList.add('show');
      lb.setAttribute('aria-hidden', 'false');
    }
    if (evt.target === lb && lb.classList.contains('show')) {
      lb.classList.remove('show');
      lb.setAttribute('aria-hidden', 'true');
    }
  }

  if (gtNavToggle && gtNavLinks) {
    gtNavToggle.addEventListener('click', () => {
      const isOpen = gtNavLinks.classList.toggle('show');
      gtNavToggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      if (!isOpen) {
        gtUpdateNavCondensed();
      } else if (gtNav) {
        gtNav.classList.remove('is-condensed');
        gtNav.style.setProperty('--nav-collapse', '0');
      }
    });
  }
  window.addEventListener('resize', () => {
    if (window.innerWidth > 760) {
      gtCloseNavMenu();
    }
    gtUpdateNavCondensed();
  });
  window.addEventListener('scroll', gtUpdateNavCondensed);

  const gtModal = $('#gt-config-modal');
  function gtOpenModal(tierKey) {
    if (!gtModal) return;
    gtState.openTier = tierKey;
    gtState.service = 'full';
    gtState.vehicle = null;
    gtState.utilities = null;
    gtState.addons.clear();
    gtState.quotes.clear();
    const tier = GT_DATA.tiers[tierKey];
    if (!tier) return;
    $('#gt-tier-chip').textContent = tier.name;
    $('#gt-modal-title').textContent = `${tier.name} — Configure`;
    const serviceHtml = [
      ['exterior','Exterior Only'],
      ['interior','Interior Only'],
      ['full','Full Wash'],
      ['motorcycle','Motorcycle (coming soon)', true]
    ].map(([val, label, disabled]) => {
      const cls = disabled ? 'gt-option disabled' : 'gt-option';
      const dis = disabled ? 'disabled' : '';
      const chk = val === 'full' && !disabled ? 'checked' : '';
      return `<label class="${cls}"><input type="radio" name="serviceType" value="${val}" ${dis} ${chk}/> ${label}</label>`;
    }).join('');
    $('#gt-service-type-list').innerHTML = serviceHtml;
    gtRenderIncludes();
    $('#gt-addon-list').innerHTML = GT_DATA.addons.map(a => {
      const classes = ['gt-option'];
      if (a.disabled) classes.push('disabled');
      const dis = a.disabled ? 'disabled' : '';
      const hint = a.disabled ? '<span class="gt-quote">(coming soon)</span>' : (a.price === null ? '<span class="gt-quote">(quote)</span>' : `<span>${gtMoney(a.price)}</span>`);
      return `<label class="${classes.join(' ')}" data-addon="${a.id}"><input type="checkbox" value="${a.id}" ${dis}/> ${a.label} ${hint}</label>`;
    }).join('');
    $$('input[name="vehicle"]').forEach(i => { i.checked = false; });
    $$('input[name="utilities"]').forEach(i => { i.checked = false; });
    $('#gt-bonus-note').classList.remove('show');
    $$('input[name="serviceType"]').forEach(i => i.onchange = () => { gtState.service = i.value; gtRenderIncludes(); gtUpdatePrice(); });
    $$('input[name="vehicle"]').forEach(i => i.onchange = () => { gtState.vehicle = i.value; gtUpdatePrice(); });
    $$('input[name="utilities"]').forEach(i => i.onchange = () => {
      gtState.utilities = i.value;
      $('#gt-bonus-note').classList.toggle('show', i.value === 'yes');
    });
    $$('#gt-addon-list input[type="checkbox"]').forEach(i => i.onchange = () => { gtToggleAddon(i.value, i.checked); gtUpdatePrice(); });
    gtUpdatePrice();
    gtModal.classList.add('show');
    gtModal.setAttribute('aria-hidden', 'false');
    if (document.body) document.body.classList.add('noscroll');
  }
  function gtCloseModal() {
    if (!gtModal) return;
    gtModal.classList.remove('show');
    gtModal.setAttribute('aria-hidden', 'true');
    if (document.body) document.body.classList.remove('noscroll');
  }

  if (gtModal) {
    gtModal.addEventListener('click', evt => {
      if (evt.target === gtModal) {
        gtCloseModal();
      }
    });
  }

  function gtRenderIncludes() {
    const tier = GT_DATA.tiers[gtState.openTier];
    if (!tier) return;
    const inc = tier.includes;
    const list = [];
    if (gtState.service === 'exterior' || gtState.service === 'full') {
      for (const item of inc.exterior) list.push(`<li><span class="dot"></span><div>${item}</div></li>`);
    }
    if (gtState.service === 'interior' || gtState.service === 'full') {
      for (const item of inc.interior) list.push(`<li><span class="dot"></span><div>${item}</div></li>`);
    }
    $('#gt-included-list').innerHTML = list.join('') || '<li class="gt-muted">Select a service to see inclusions.</li>';
  }

  function gtToggleAddon(id, on) {
    const def = GT_DATA.addons.find(a => a.id === id);
    if (!def || def.disabled) return;
    if (on) {
      gtState.addons.add(id);
      if (def.price === null) gtState.quotes.add(id); else gtState.quotes.delete(id);
      if (def.exclusiveWith) {
        def.exclusiveWith.forEach(other => {
          gtState.addons.delete(other);
          const cb = $(`#gt-addon-list input[value="${other}"]`);
          if (cb) cb.checked = false;
        });
      }
    } else {
      gtState.addons.delete(id);
      gtState.quotes.delete(id);
    }
  }

  function gtUpdatePrice() {
    const tier = GT_DATA.tiers[gtState.openTier];
    if (!tier) return;
    let base = tier.base[gtState.service] ?? 0;
    let surcharge = 0;
    if (gtState.vehicle === 'suv') surcharge = tier.surcharge.suv;
    if (gtState.vehicle === 'oversized') surcharge = tier.surcharge.oversized;
    if (gtState.service === 'motorcycle') surcharge = 0;
    let addonsTotal = 0;
    const priced = [];
    const quoted = [];
    for (const id of gtState.addons) {
      const a = GT_DATA.addons.find(x => x.id === id);
      if (!a || a.disabled) continue;
      if (a.price === null) {
        quoted.push(a);
      } else {
        addonsTotal += a.price;
        priced.push(a);
      }
    }
    const subtotal = base + surcharge + addonsTotal;
    gtState.total = subtotal;
    const rows = [];
    const vehicleLabel = gtState.vehicle ? ` · ${gtLabelVehicle(gtState.vehicle)}` : '';
    const baseLabel = `Base (${tier.name} · ${gtLabelService(gtState.service)}${vehicleLabel})`;
    rows.push(gtRow(baseLabel, base));
    if (surcharge > 0) rows.push(gtRow(`Vehicle surcharge (${gtLabelVehicle(gtState.vehicle)})`, surcharge));
    for (const a of priced) rows.push(gtRow(a.label, a.price));
    if (quoted.length) rows.push(`<div class="gt-price-row"><span>${quoted.length} add-on(s) require quote</span><span class="gt-quote">TBD</span></div>`);
    $('#gt-price-breakdown').innerHTML = rows.join('');
    $('#gt-calc-total').textContent = gtMoney(subtotal);
  }
  function gtRow(label, amount) {
    return `<div class="gt-price-row"><span>${label}</span><span>${gtMoney(amount)}</span></div>`;
  }
  function gtLabelService(s) {
    if (s === 'full') return 'Full Wash';
    if (s === 'exterior') return 'Exterior Only';
    if (s === 'interior') return 'Interior Only';
    return 'Motorcycle';
  }
  function gtLabelVehicle(v) {
    if (v === 'sedan') return 'Sedan/Coupe';
    if (v === 'suv') return 'SUV/Truck';
    if (v === 'oversized') return 'Oversized';
    return 'Sedan/Coupe';
  }

  function gtRequireModalFields() {
    if (!gtState.vehicle) return 'Please select your vehicle type.';
    if (!gtState.utilities) return 'Please confirm if you can provide water & electricity.';
    return null;
  }

  function gtApplySelection() {
    const err = gtRequireModalFields();
    if (err) { alert(err); return; }
    const tier = GT_DATA.tiers[gtState.openTier];
    if (!tier) return;
    const svc = gtLabelService(gtState.service);
    const veh = gtLabelVehicle(gtState.vehicle);
    const util = gtState.utilities === 'yes' ? 'Yes (bonus add-on included)' : 'No';
    const chosenAddons = Array.from(gtState.addons).map(id => {
      const a = GT_DATA.addons.find(x => x.id === id);
      if (!a || a.disabled) return null;
      return `${a.label}${a.price === null ? ' (quote)' : ''}`;
    }).filter(Boolean);
    const summaryParts = [
      `Package: ${tier.name}`,
      `Service: ${svc}`,
      `Vehicle: ${veh}`,
      `Water & Electricity Provided: ${util}`,
      `Add-Ons: ${chosenAddons.length ? chosenAddons.join('; ') : 'None'}`,
      `Estimated Total: ${gtMoney(gtState.total)}`
    ];
    const inclusionSections = [];
    if (gtState.service === 'exterior' || gtState.service === 'full') {
      inclusionSections.push(`Inclusions — Exterior:\n• ${tier.includes.exterior.join('\n• ')}`);
    }
    if (gtState.service === 'interior' || gtState.service === 'full') {
      inclusionSections.push(`Inclusions — Interior:\n• ${tier.includes.interior.join('\n• ')}`);
    }
    const summaryText = summaryParts.join('\n') + (inclusionSections.length ? `\n\n${inclusionSections.join('\n\n')}` : '');
    $('#gt-selection-summary').textContent = summaryText;
    $('#gt-price-chip').textContent = `Total: ${gtMoney(gtState.total)}`;
    gtCloseModal();
    const booking = document.getElementById('booking');
    if (booking) booking.scrollIntoView({ behavior: 'smooth' });
  }

  function gtComposeEmail() {
    const name = $('#gt-name').value.trim();
    const phone = $('#gt-phone').value.trim();
    const email = $('#gt-email').value.trim();
    const address = $('#gt-address').value.trim();
    const date = $('#gt-date').value;
    const time = $('#gt-time').value;
    const notes = $('#gt-notes').value.trim();
    if (!name || !phone || !email || !address || !date || !time) {
      alert('Please complete all required booking fields.');
      return false;
    }
    const subject = encodeURIComponent(`[${GT_COMPANY.brand}] Booking Request — ${name}`);
    const body = encodeURIComponent([
      `Name: ${name}`,
      `Phone: ${phone}`,
      `Email: ${email}`,
      `Address: ${address}`,
      `Preferred Date/Time: ${date} @ ${time}`,
      '',
      '--- Selected Service ---',
      $('#gt-selection-summary').textContent,
      '',
      'Notes:',
      notes || '—'
    ].join('\\n'));
    window.location.href = `mailto:${GT_COMPANY.salesEmail}?subject=${subject}&body=${body}`;
    return false;
  }

  function gtCopySummary() {
    const text = $('#gt-selection-summary').textContent;
    if (!text || /No selection/.test(text)) {
      alert('Configure a package first.');
      return;
    }
    navigator.clipboard.writeText(text).then(() => alert('Summary copied!'));
  }

  function gtHydrateStatic(root = document) {
    const year = root.getElementById ? root.getElementById('gt-year') : $('#gt-year', root);
    if (year) year.textContent = new Date().getFullYear();
    const callBtn = root.getElementById ? root.getElementById('gt-tap-call') : $('#gt-tap-call', root);
    if (callBtn) callBtn.href = `tel:${GT_COMPANY.phone.replace(/[^+\d]/g,'')}`;
  }

  document.addEventListener('click', gtSmoothAnchors);
  document.addEventListener('click', gtHandleGallery);
  document.addEventListener('click', evt => {
    const configBtn = evt.target.closest('[data-open-config]');
    if (configBtn) {
      evt.preventDefault();
      const card = configBtn.closest('.gt-tier');
      if (!card) return;
      gtOpenModal(card.getAttribute('data-tier'));
      return;
    }
    const faqBtn = evt.target.closest('[data-faq-toggle]');
    if (faqBtn) {
      evt.preventDefault();
      const item = faqBtn.closest('.gt-faq-item');
      if (!item) return;
      const answerId = faqBtn.getAttribute('aria-controls');
      const answer = answerId ? document.getElementById(answerId) : item.querySelector('.gt-faq-answer');
      const willOpen = !item.classList.contains('open');
      $$('.gt-faq-item').forEach(other => {
        if (other === item) return;
        other.classList.remove('open');
        const otherBtn = other.querySelector('[data-faq-toggle]');
        const otherAnswerId = otherBtn ? otherBtn.getAttribute('aria-controls') : null;
        const otherAnswer = otherAnswerId ? document.getElementById(otherAnswerId) : other.querySelector('.gt-faq-answer');
        if (otherBtn) otherBtn.setAttribute('aria-expanded', 'false');
        if (otherAnswer) otherAnswer.hidden = true;
      });
      item.classList.toggle('open', willOpen);
      faqBtn.setAttribute('aria-expanded', willOpen ? 'true' : 'false');
      if (answer) answer.hidden = !willOpen;
    }
  });
  document.addEventListener('keydown', evt => {
    if (evt.key === 'Escape') {
      gtCloseModal();
      const lb = $('#gt-lightbox');
      if (lb) {
        lb.classList.remove('show');
        lb.setAttribute('aria-hidden', 'true');
      }
    }
  });

  gtUpdateNavCondensed();
  gtHydrateStatic();
  document.addEventListener('shopify:section:load', evt => {
    gtHydrateStatic(evt.target || document);
    gtUpdateNavCondensed();
  });
  document.addEventListener('shopify:section:select', evt => {
    gtHydrateStatic(evt.target || document);
    gtUpdateNavCondensed();
  });
  </script>

